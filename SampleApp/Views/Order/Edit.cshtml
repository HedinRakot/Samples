@model OrderModel

<form asp-action="Edit" asp-controller="Order" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <input asp-for="Id" type="hidden" />

    <select value="@(Model.CustomerId)" class="custom-select" id="CustomerId" name="CustomerId" data-type="DropDownList" data-val="true" data-val-required="Please select a customer">
        <option value="">Please select</option>
        @foreach (var item in Model.Customers)
        {
            @*string selectedStr = item.Id == Model.CustomerId ? "selected=\"selected\"" : "";*@

            if (item.Id == Model.CustomerId)
            {
                <option value="@item.Id" selected="selected">@item.Name</option>
            }
            else
            {
                <option value="@item.Id">@item.Name</option>
            }
        }
    </select>
    <i class="halflings halflings-menu-down"></i>
    <div class="text-danger">
        <span class="field-validation-valid" data-valmsg-for="CustomerId" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group">
        <div class="col-sm-4">
            <label asp-for="OrderNumber">Ordernumber</label>
            <input asp-for="OrderNumber" class="form-control" placeholder="" type="text" />
            <span asp-validation-for="OrderNumber" class="text-danger"></span>
        </div>
    </div>

    <button type="button" class="btn btn-secondary" onclick="applyCode()">Apply code</button>
    
    <input type="submit" value="Save" />
</form>

@section Scripts
    {
    <script type="text/javascript">

        function applyCode() {
            var id = $('#elementId').val();

            $.ajax({
                url: '@Url.Action("ApplyCode", "Order")/',
                data: {code: '123'},
                type: 'POST',
                success: function (result) {
                    window.location = '@Url.Action("Index", "Order")';
                },
                error: function (result) {

                }
            });
        }
    </script>
}
